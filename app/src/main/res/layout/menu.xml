<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:id="@+id/ll_root"
    android:background="@color/dark_primary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:layout_marginTop="?attr/actionBarSize"
        android:paddingLeft="16dp"
        >

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableLeft="@mipmap/comment_avatar"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:text="请登录"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_favorites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawableLeft="@mipmap/favorites"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="我的收藏"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:clickable="true"
                android:drawableLeft="@mipmap/download"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="离线下载"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_menu_main_bg"
        android:clickable="true"
        android:drawableLeft="@mipmap/menu_home"
        android:drawablePadding="22dp"
        android:gravity="center_vertical"
        android:paddingBottom="14dp"
        android:paddingLeft="32dp"
        android:paddingTop="14dp"
        android:text="首页"
        android:textColor="@color/primary"
        android:textSize="16sp" />

    <ListView
        android:id="@+id/lv_item"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/dark_menu_list_bg"
        android:divider="@android:color/transparent"
        android:scrollbars="none" />
</LinearLayout>